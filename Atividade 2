------------------------------------------------------------------------------------------------------------------------------------------------------------------------- ATIVIDADE - Q1
import java.util.Scanner;

public class Main
{
	public static void main(String[] args) {

Scanner prompt = new Scanner(System.in); // variaveis
int difnum = 0;


System.out.print("Digite o numero A: "); // entrada de variaveis
int num1 = prompt.nextInt();
System.out.print("Digite o numero B: ");
int num2 = prompt.nextInt();

// estrutura condicional que faz a conta da diferença de um numero e outro e decide qual e maior
if (num1 > num2){
    difnum = num1 - num2;
    System.out.println("O numero A é maior que B, com uma diferença de: " + difnum );
} else {
    difnum = num1 - num2;
    System.out.println("O numero B é maior que A, com uma diferença de: " + difnum );
}

	}
}
------------------------------------------------------------------------------------------------------------------------------------------------------------------------- ATIVIDADE - Q2
import java.util.Scanner;

public class Main
{
	public static void main(String[] args) {

Scanner prompt = new Scanner(System.in); // variaveis

System.out.print("Digite o numero X: "); // entrada de variaveis
int num1 = prompt.nextInt();


// estrutura condicional que faz a conta da diferença de um numero e outro e decide qual e maior
if (num1 <= 0){
    int result = num1 * -1;
    System.out.println("O numero inserido foi: " + num1 + " e foi convertido para positivo: " + result );
} else {
    System.out.println("O numero inserido é positivo sem mudanças necessarias : " + num1 );
}
	}
}
------------------------------------------------------------------------------------------------------------------------------------------------------------------------- ATIVIDADE - Q3
import java.util.Scanner;
import java.text.DecimalFormat;

public class Main
{
	public static void main(String[] args) {

DecimalFormat df = new DecimalFormat(" #,###.##"); // variaveis
Scanner prompt = new Scanner(System.in); 

System.out.print("Digite a Nota 1: "); // entrada de variaveis
Double n1 = prompt.nextDouble();
System.out.print("Digite a Nota 2: ");
Double n2 = prompt.nextDouble();
System.out.print("Digite a Nota 3: ");
Double n3 = prompt.nextDouble();

// calculo media
Double media = (n1 + n2 + n3) / 3;

// estrutura condicional que faz a conta da diferença de um numero e outro e decide qual e maior
if (media >= 5){
    System.out.println("Resultado ::APROVADO:: sua média foi: " + df.format(media) );
} else {
    System.out.println("Resultado ::REPROVADO:: sua média foi: " + df.format(media) + " Media necessaria maior ou igual a ::5:: ");
}

	}
}
------------------------------------------------------------------------------------------------------------------------------------------------------------------------- ATIVIDADE - Q4
//--------------------------------------------------------------Imports
import java.util.Scanner;
import java.text.DecimalFormat;
//--------------------------------------------------------------
public class Main
{
	public static void main(String[] args) {

//--------------------------------------------------------------Varieaveis
DecimalFormat df = new DecimalFormat("#,###.##");      
Scanner prompt = new Scanner(System.in); 
Double n1,n2,media,mediaNova,nExame;
//--------------------------------------------------------------Entrada Val
do {
System.out.print("Digite a Nota 1: "); // entrada de variaveis
n1 = prompt.nextDouble();
System.out.print("Digite a Nota 2: ");
n2 = prompt.nextDouble();
if (n1 < 0 || n1 > 10 || n2 < 0 || n2 > 10 ){
    System.out.println("Nota inserida invalida, senhas devem ser entre 0 e 10");
    }
} while (n1 < 0 || n1 > 10 || n2 < 0 || n2 > 10 );
//--------------------------------------------------------------Processo Media base
media = (n1 + n2) / 2;
//--------------------------------------------------------------Saida Com Estrutura Condicional
if (media >= 7){
    System.out.println("Resultado ::APROVADO:: sua média foi: " + df.format(media) + " média minima necessaria ::7:: ");
} else { 
    System.out.print("Média: " + df.format(media) + " insuficiente...  Digite a nota do Exame para re-avaliação: ");
    //--------------------------------------------------------------Calculo de Media Nova com Loop para numeros Invalidos
    do{
    nExame = prompt.nextDouble();
    if (nExame < 0 || nExame > 10) {
        System.out.println("Nota inserida invalida, senhas devem ser entre 0 e 10");
        }
    } while (nExame < 0 || nExame > 10);
    mediaNova = (n1 + n2 + nExame) / 3;
    //---------------------------------------------------------------------------------------------------------------------
    if (mediaNova >= 5){
        System.out.println("Resultado ::APROVADO:: sua média foi: " + df.format(mediaNova) + " média minima necessaria ::5:: (OBS: media diferente caso Exame Seja feito.) ");
    } else {
        System.out.println("Resultado ::REPROVADO:: sua média foi: " + df.format(mediaNova) + " média minima necessaria ::5:: (OBS: media diferente caso Exame Seja feito.) ");
    }
}

prompt.close();

	}
}
------------------------------------------------------------------------------------------------------------------------------------------------------------------------- ATIVIDADE - Q5
import java.util.Scanner;
import java.text.DecimalFormat;

public class Main
{
	public static void main(String[] args) {

//----------------------------------------------------------------VARIAVEIS
DecimalFormat df = new DecimalFormat("#,###.####");
Scanner prompt = new Scanner(System.in);
double a,b,c,delta;
//----------------------------------------------------------------ENTRADA DE VAL
System.out.print("Digite numero A: ");
a = prompt.nextDouble();
System.out.print("Digite numero B: ");
b = prompt.nextDouble();
System.out.print("Digite numero C: ");
c = prompt.nextDouble();

//----------------------------------------------------------------PROCESSO / SAIDA
delta = Math.pow(b, 2) - (4 * a * c);              // CAL DELTA
System.out.println("Valor de delta: " + delta);
	
	
if (delta < 0){
    System.out.println("Não existem raizes reais.");
} else if (delta > 0){
    double raiz1 = (-b + Math.sqrt(delta)) / (2 * a);
    double raiz2 = (-b - Math.sqrt(delta)) / (2 * a);
    System.out.println("As raizes reais são: " + df.format(raiz1) + " e " + df.format(raiz2) );
} else {
    double raiz1 = (-b / (2 * a) );
    System.out.println("Há uma Raiz real: " + df.format(raiz1) );
     }
  }
}
